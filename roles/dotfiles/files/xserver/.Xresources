! Base16 Materia
! Scheme: Defman21

#define base00 #263238
#define base01 #2C393F
#define base02 #37474F
#define base03 #707880
#define base04 #C9CCD3
#define base05 #CDD3DE
#define base06 #D5DBE5
#define base07 #FFFFFF
#define base08 #EC5F67
#define base09 #EA9560
#define base0A #FFCC00
#define base0B #8BD649
#define base0C #80CBC4
#define base0D #89DDFF
#define base0E #82AAFF
#define base0F #EC5F67

*.foreground:   base05
*.background:   base00
*.cursorColor:  base05

*.color0:       base00
*.color1:       base08
*.color2:       base0B
*.color3:       base0A
*.color4:       base0D
*.color5:       base0E
*.color6:       base0C
*.color7:       base05

*.color8:       base03
*.color9:       base08
*.color10:      base0B
*.color11:      base0A
*.color12:      base0D
*.color13:      base0E
*.color14:      base0C
*.color15:      base07

! Note: colors beyond 15 might not be loaded (e.g., xterm, urxvt),
! use 'shell' template to set these if necessary
*.color16:      base09
*.color17:      base0F
*.color18:      base01
*.color19:      base02
*.color20:      base04
*.color21:      base06


!! Use the full colored XTerm
UXTerm*termName: xterm-256color

!! Enable UTF-8 support
UXTerm*locale: true

!! use Ubuntu Mono font
UXTerm*faceName: Meslo LG M DZ for Powerline
UXTerm*faceSize: 14

!! Disable bold rendering to make all 16 solarized colors available
UXTerm*font: fixed
UXTerm*boldFont: fixed
UXTerm*boldColors: false
UXTerm*allowBoldFonts: false

!! Show scrollbars
UXTerm*scrollBar: true
UXTerm*rightScrollBar: true
UXTerm*Scrollbar*thickness: 7
UXTerm*Scrollbar*foreground: S_orange
UXTerm*Scrollbar*background: S_base03

!! Ensure .profile is processed
UXTerm*loginShell: true

!! Tons of scroll-back
UXTerm*saveLines: 4096

!! Dont jump to bottom when scrolling output
UXTerm*scrollTtyOutput: false

!! But, jump to bottom when a key is pressed
UXTerm*scrollKey: true

!! Ensure the meta key sends escape sequences (for irssi/emacs)
UXTerm*metaSendsEscape: true

!! Use the bell to indicate the terminal is urgent
UXTerm*bellIsUrgent: true

!! Anti-alias fonts
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

!! Bind Ctrl+Insert to copy to CLIPBOARD
*VT100*translations: #override \
    Ctrl <KeyPress> Insert: copy-selection(CLIPBOARD, CUT_BUFFER1)

